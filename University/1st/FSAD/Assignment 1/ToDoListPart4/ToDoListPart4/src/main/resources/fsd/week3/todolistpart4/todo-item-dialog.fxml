<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane fx:controller="fsd.week3.todolistpart4.DialogController"
            xmlns:fx="http://javafx.com/fxml">
    <headerText>
        Please enter a new item to add to the todo list
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Short Description" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="shortDescrip" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Details" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="details" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Deadline" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="deadline" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>